# Environment variables for Docker Media Stack
# Copy this file to .env and customize for your environment

# ==============================================
# SYSTEM CONFIGURATION
# ==============================================
PUID=1000
PGID=1000
TZ=America/New_York

# ==============================================
# STORAGE PATHS
# ==============================================
ROOT_CONFIG=/mnt/docker/configs
MOVIES_PATH=/mnt/storage/Movies
TV_PATH=/mnt/storage/TV
MUSIC_PATH=/mnt/storage/Music
DOWNLOADS_PATH=/mnt/storage/Downloads
JELLYFIN_CACHE=/mnt/docker/configs/jellyfin/cache

# ==============================================
# NETWORK CONFIGURATION
# ==============================================
JELLYFIN_PUBLISHED_URL=https://your-domain.com

# ==============================================
# VPN CONFIGURATION
# ==============================================
VPN_SERVICE_PROVIDER=your-vpn-provider
OPENVPN_USER=your-vpn-username
OPENVPN_PASSWORD=your-vpn-password
SERVER_REGIONS=your-preferred-region

# ==============================================
# HEALTH CHECK CONFIGURATION
# ==============================================
HC_INTERVAL=30s
HC_TIMEOUT=10s
HC_RETRIES=3
HC_START_PERIOD=60s